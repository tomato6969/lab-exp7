#include <iostream>
using namespace std;
int main() {
   int n;int i; int s=0; float avg=0;
   cout<<"Enter the value of n ";
   cin>>n;
   int ar[n];
  for(i=0;i<n;i++)
   {   cout<<"enter the element of array " << i+1 ;
       cin>>ar[i];
   
   s=s+ar[i];
   avg=s/n;
   
   }
   cout<<s;
   cout<<endl;
   cout<<avg;
    return 0;
}

OUTPUT:
Enter the value of n 3
enter the element of array 17
enter the element of array 28
enter the element of array 36
21
7
